<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragments.HomeFragment"
        android:padding="16dp">

        <!-- Logo ImageView -->
        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/logo"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            tools:ignore="ContentDescription" />

        <!-- Replace titleTextView with an ImageView -->
        <ImageView
            android:id="@+id/titleImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/navbar"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Introduction TextView -->
        <TextView
            android:id="@+id/introductionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/introduction"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:background="#181851"
            android:padding="16dp"/>

        <!-- History TextView -->

        <!-- Philosophy TextView -->
        <TextView
            android:id="@+id/historyTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#181851"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/historic"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/philosophyTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/philosophy"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:background="#181851"
            android:padding="16dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
